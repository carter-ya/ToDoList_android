<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.ifengxue.android.todolist">

  <uses-permission android:name="android.permission.INTERNET"/>

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/AppTheme">
    <activity
      android:label="@string/title_activity_login"
      android:name=".activity.LoginActivity"
      android:theme="@style/Theme.AppCompat">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
      android:label="@string/title_activity_project"
      android:name=".activity.ProjectActivity"
      android:theme="@style/Theme.AppCompat">
    </activity>
    <activity
      android:label="@string/title_activity_add_project"
      android:name=".activity.AddProjectActivity"
      android:theme="@style/Theme.AppCompat.Dialog">
    </activity>
    <activity
      android:label="@string/title_activity_project_info"
      android:name=".activity.ProjectInfoActivity"
      android:theme="@style/Theme.AppCompat.Dialog">
    </activity>
    <activity
      android:label="@string/title_activity_rename_project"
      android:name=".activity.RenameProjectActivity"
      android:theme="@style/Theme.AppCompat.Dialog">
    </activity>
  </application>

</manifest>